<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/list_item_margin"
    android:layout_marginTop="@dimen/list_item_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/left_user_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_margin="@dimen/icon_layout_margin"
            android:src="@drawable/face_1" />

        <TextView
            android:id="@+id/left_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/message_text_margin"
            android:layout_marginTop="@dimen/message_text_margin"
            android:background="@drawable/message_text_shape_left"
            android:gravity="left"
            android:maxWidth="@dimen/message_text_width"
            android:padding="@dimen/message_text_padding"
            android:text="@string/test_text_long"
            android:textSize="@dimen/message_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/left_time_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/time_display_margin"
        android:text="@string/test_time_text" />

</LinearLayout>