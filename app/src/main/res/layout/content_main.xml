            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sendEmailListner"
                android:text="Send Email" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="loginSignupClickListener"
                android:text="Login/Signup" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="loginClickListener"
                android:text="Login" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="logoutClickListener"
                android:text="Logout" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="checkInternetClickListener"
                android:text="Check Internet" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="sendSMSClickListener"
                android:text="Send SMS to 0304442212" />

            <Button
                android:id="@+id/led_on_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="ledOnOffClickListener"
                android:text="Turn LED ON or OFF" />

            <Button
                android:id="@+id/notification_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="notificationBtnClickListener"
                android:text="Show Notification" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="aboutClickListener"
                android:text="About App" />

        </LinearLayout>

    </ScrollView>

    <iammert.com.library.ConnectionStatusView
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="visible"
        app:dismissOnComplete="true" />
