<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Title for next Activity.."
                android:inputType="textCapWords"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ip_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I know http://just.com/anu how to @whisper, And I #know just #how to cry,I know just @where to anu@find.com the answers"
                android:visibility="visible" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="stopwatchKotlinClickListener"
                android:text="StopWatch Kotlin" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="chatClickListener"
                android:text="Chat" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="smsListClickListener"
                android:text="SMS List" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="imageEffectsClickListener"
                android:text="Image Effects/Filters" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="businessCardClickListener"
                android:text="Business Card" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="rtpClickListener"
                android:text="RTP using VLC" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ticTacToeClickListener"
                android:text="Tic Tac Toe" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="doorSignViewClickListener"
                android:text="Door Sign View" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fidgetSpinnerClickListener"
                android:text="Fidget Spinner " />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="retrofitClickListener"
                android:text="Retrofit " />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="youtubeVideoDownlaoderClickListener"
                android:text="Youtube Video Downloader" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="firebaseChatClickListener"
                android:text="Firebase Chat" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="webViewYoutubeClickListener"
                android:text="Youtube Embedded Player" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="memoryInfoClickListener"
                android:text="Memory Info" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="socketClickListener"
                android:text="Socket Programming" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="paginatedListClickListener"
                android:text="Paginated ListView" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="recyclerClickListener"
                android:text="Recycler View" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="getGPSlocation"
                android:text="Get GPS locatoin" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="thermometerClickListener"
                android:text="Thermometer" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fileDownloadClickListener"
                android:text="File Download" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="colorPickerClickListener"
                android:text="Color Picker" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ocrClickListener"
                android:text="OCR Number Recognition" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="apkExtractClickListener"
                android:text="APK Extractor" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cardFormClickListener"
                android:text="Card Form" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="todoClickListener"
                android:text="Todo List" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="mqttIOTClickListener"
                android:text="MQTT IOT" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="weatherClickListener"
                android:text="Weather Details" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="screenShotClickListener"
                android:text="Screen Capture" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="FirebaseClickListener"
                android:text="FireBase Notification" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="FingerPrintClickListener"
                android:text="FingerPrint" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="heartBeatClickListener"
                android:text="HeartBeatView" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="scrollingClickListener"
                android:text="Scrolling Tollbar" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="nfcReaderClickListener"
                android:text="NFC Reader" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="accelerometerClickListener"
                android:text="Accelerometer" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="altitudeClickListener"
                android:text="Drone Altitude" />

            <Button
                android:id="@+id/speedometer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="speedometerBtnClickListener"
                android:text="Speedometer" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="stopwatchClickListener"
                android:text="Stopwatch" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="counDownClickListener"
                android:text="CountDown Timer" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="gestureDetectorClickListener"
                android:text="Gesture Detector" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="recorderClickListener"
                android:text="Voice Recorder" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="compasClickListener"
                android:text="Compass" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="qrCodeClickListener"
                android:text="QRcode" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button"
                android:onClick="calculatorClickListener"
                android:text="Calculator" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button2"
                android:onClick="listViewClickListener"
                android:text="ListView" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_text"
                android:onClick="signatureClickListener"
                android:text="Signature" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button3"
                android:onClick="gridViewClickListener"
                android:text="GridView" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="drawerClickListener"
                android:text="Drawer" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="webViewClickListener"
                android:text="GIF Animation" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="webViewInAppBrowserClickListener"
